{% extends 'base.html.twig' %}

{% block title %} Les Paris {% endblock %}

{% block body %}

    <div class="table-responsive">
        <table class="table">
            <thead class="blue lighten-1">
                <tr>
                    <th>Equipe 1</th>
                    <th>Equipe 2</th>
                    <th>Utilisateur</th>
                    <th>Score</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for pari in paris %}

            <tr>
                <td>{{ pari.equipe1 }}</td>
                <td>{{ pari.equipe2 }}</td>
                <td>{{ pari.user }}</td>
                <td>{{ pari.scoreEquipe1 }} - {{ pari.scoreEquipe2 }}</td>
                <td></td>
            </tr>

            {% endfor %}

            </tbody>
        </table>
    </div>
    {#<a href="{{ path('app_team_new') }}">Créer une équipe</a>#}

{% endblock %}