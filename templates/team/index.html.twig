{% extends 'base.html.twig' %}

{% block title %} Les Equipes {% endblock %}

{% block body %}


    <div class="container-fluid"></div>

        <div class="table-responsive">
            <table class="table">
                <thead class="blue lighten-1">
                <tr>
                    <th>Nom</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for team in teams %}

                    <tr>
                        <td>{{ team.nom }}</td>
                        <td><button href="{{ path('app_team_listingUsers', { 'idTeam': team.id }) }}">Liste des utilisateurs</button></td>
                    </tr>

                {% endfor %}

                </tbody>
            </table>
        </div>

    <a href="{{ path('app_team_new') }}">Créer une équipe</a>

    </div>
{% endblock %}