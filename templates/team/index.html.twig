{% extends 'base.html.twig' %}

{% block title %} Les Equipes {% endblock %}

{% block body %}

    <div class="table-responsive">
        <table class="table">
            <thead class="blue lighten-1">
            <tr>
                <th>Nom</th>
                <th>Joueurs</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            {% for team in teams %}

                <tr>
                    <td>{{ team.nom }}</td>
                    <td><a href="{{ path('app_team_listingUsers', { 'idTeam': team.id }) }}">Liste des utilisateurs <i class="fa fa-long-arrow-right light-blue-text"></i></a></td>
                    <td><a href="{{ path('app_team_rejoindreTeam', {'idUser': userId, 'idTeam': team.id }) }}">Rejoindre l' équipe <i class="fa fa-long-arrow-right light-blue-text"></i></a></td>
                </tr>

            {% endfor %}

            </tbody>
        </table>
    </div>

    <a href="{{ path('app_team_new') }}">Créer une équipe</a>

{% endblock %}